<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
	<Properties>
		<Property name="LOG_PATTERN">
			%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
		</Property>
	</Properties>
	<Appenders>
		<Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>
	</Appenders>


	<Loggers>
		<Logger name="org.springframework" level="ERROR" additivity="false"></Logger>
		<Logger name="org.hibernate" level="ERROR" additivity="false"></Logger>
		<Logger name="org.apache" level="ERROR" additivity="false"></Logger>


		<asyncLogger name="com.nobroker.in" level="INFO"
					 additivity="false">
			<AppenderRef ref="ConsoleAppender" />
		</asyncLogger>
		<asyncRoot level="info">
			<AppenderRef ref="ConsoleAppender" />
		</asyncRoot>
		<!--<logger name="org" level="ERROR" additivity="false">-->
		<!--</logger>-->
	</Loggers>
</Configuration>
